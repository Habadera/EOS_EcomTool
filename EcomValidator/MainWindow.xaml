<Window x:Class="EcomValidator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ecom Validator"
        Width="1200" Height="800"
        MinWidth="1000" MinHeight="700"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource Brush.WindowBackground}"
        Foreground="{DynamicResource Brush.FG}">

    <!-- ========== RESOURCES (dark theme) ========== -->
    <Window.Resources>
        <!-- Colors -->
        <Color x:Key="Color.Background">#1E1E1E</Color>
        <Color x:Key="Color.Panel">#232323</Color>
        <Color x:Key="Color.Border">#313131</Color>
        <Color x:Key="Color.FG">#F3F3F3</Color>
        <Color x:Key="Color.FG.Muted">#C9C9C9</Color>
        <Color x:Key="Color.Input">#2A2A2A</Color>
        <Color x:Key="Color.Input.Focus">#3A3A3A</Color>
        <Color x:Key="Color.RowAlt">#242424</Color>
        <Color x:Key="Color.RowSel">#2B3B55</Color>
        <Color x:Key="Color.Header">#2B2B2B</Color>
        <Color x:Key="Color.Button.Normal">#3A3A3A</Color>
        <Color x:Key="Color.Button.Hover">#505050</Color>
        <Color x:Key="Color.Button.Pressed">#2F2F2F</Color>
        <Color x:Key="Color.Button.Border">#565656</Color>

        <!-- Brushes -->
        <SolidColorBrush x:Key="Brush.WindowBackground" Color="{StaticResource Color.Background}" />
        <SolidColorBrush x:Key="Brush.Panel" Color="{StaticResource Color.Panel}" />
        <SolidColorBrush x:Key="Brush.Border" Color="{StaticResource Color.Border}" />
        <SolidColorBrush x:Key="Brush.FG" Color="{StaticResource Color.FG}" />
        <SolidColorBrush x:Key="Brush.FG.Muted" Color="{StaticResource Color.FG.Muted}" />
        <SolidColorBrush x:Key="Brush.Input" Color="{StaticResource Color.Input}" />
        <SolidColorBrush x:Key="Brush.Input.Focus" Color="{StaticResource Color.Input.Focus}" />
        <SolidColorBrush x:Key="Brush.RowAlt" Color="{StaticResource Color.RowAlt}" />
        <SolidColorBrush x:Key="Brush.RowSel" Color="{StaticResource Color.RowSel}" />
        <SolidColorBrush x:Key="Brush.Header" Color="{StaticResource Color.Header}" />
        <SolidColorBrush x:Key="Brush.Button.Normal" Color="{StaticResource Color.Button.Normal}"/>
        <SolidColorBrush x:Key="Brush.Button.Hover"  Color="{StaticResource Color.Button.Hover}"/>
        <SolidColorBrush x:Key="Brush.Button.Pressed" Color="{StaticResource Color.Button.Pressed}"/>
        <SolidColorBrush x:Key="Brush.Button.Border" Color="{StaticResource Color.Button.Border}"/>

        <!-- Base text/containers -->
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="{DynamicResource Brush.FG}" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource Brush.FG}" />
        </Style>
        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="{DynamicResource Brush.FG}" />
        </Style>

        <!-- TextBox / PasswordBox -->
        <Style x:Key="FormTextBox" TargetType="TextBox">
            <Setter Property="Foreground" Value="{DynamicResource Brush.FG}" />
            <Setter Property="Padding" Value="6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{DynamicResource Brush.Input}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Brush.Border}"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="MinWidth" Value="260"/>
            <Setter Property="MaxWidth" Value="420"/>
        </Style>
        <Style x:Key="FormPasswordBox" TargetType="PasswordBox">
            <Setter Property="Foreground" Value="{DynamicResource Brush.FG}" />
            <Setter Property="Padding" Value="6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{DynamicResource Brush.Input}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Brush.Border}"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="MinWidth" Value="260"/>
            <Setter Property="MaxWidth" Value="420"/>
        </Style>

        <!-- DatePicker: outer control (size/alignment) -->
        <Style x:Key="FormDatePicker" TargetType="DatePicker">
            <Setter Property="Foreground" Value="{DynamicResource Brush.FG}" />
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="MinWidth" Value="260"/>
            <Setter Property="MaxWidth" Value="420"/>
        </Style>

        <!-- Dark DatePicker text area -->
        <Style TargetType="{x:Type DatePickerTextBox}">
            <Setter Property="Foreground" Value="{DynamicResource Brush.FG}" />
            <Setter Property="Background" Value="{DynamicResource Brush.Input}" />
            <Setter Property="BorderBrush" Value="{DynamicResource Brush.Border}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="6" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DatePickerTextBox}">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <Grid>
                                <ScrollViewer x:Name="PART_ContentHost" />
                                <ContentPresenter x:Name="PART_Watermark"
                                                  Margin="4,0,0,0"
                                                  VerticalAlignment="Center"
                                                  IsHitTestVisible="False" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource Brush.Input.Focus}"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{DynamicResource Brush.Button.Border}"/>
                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource Brush.Input.Focus}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Dark popup Calendar (implicit styles) -->
        <Style TargetType="{x:Type Calendar}">
            <Setter Property="Background" Value="{DynamicResource Brush.Panel}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Brush.Border}"/>
            <Setter Property="Foreground" Value="{DynamicResource Brush.FG}"/>
        </Style>
        <Style TargetType="{x:Type CalendarItem}">
            <Setter Property="Background" Value="{DynamicResource Brush.Panel}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Brush.Border}"/>
            <Setter Property="Foreground" Value="{DynamicResource Brush.FG}"/>
        </Style>
        <Style TargetType="{x:Type CalendarDayButton}">
            <Setter Property="Foreground" Value="{DynamicResource Brush.FG}"/>
            <Setter Property="Background" Value="{DynamicResource Brush.Panel}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Brush.Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource Brush.Button.Hover}"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{DynamicResource Brush.RowSel}"/>
                </Trigger>
                <Trigger Property="IsInactive" Value="True">
                    <Setter Property="Foreground" Value="{DynamicResource Brush.FG.Muted}"/>
                </Trigger>
                <Trigger Property="IsToday" Value="True">
                    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Button.Border}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- CheckBox -->
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="{DynamicResource Brush.FG}" />
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Buttons -->
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="{DynamicResource Brush.FG}" />
            <Setter Property="Background" Value="{DynamicResource Brush.Button.Normal}" />
            <Setter Property="BorderBrush" Value="{DynamicResource Brush.Button.Border}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="8,6" />
            <Setter Property="Margin" Value="6,0,0,0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              Margin="{TemplateBinding Padding}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource Brush.Button.Hover}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource Brush.Button.Pressed}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Tabs: TabControl + TabItem -->
        <Style TargetType="TabControl">
            <Setter Property="Foreground" Value="{DynamicResource Brush.FG}" />
            <Setter Property="Background" Value="{DynamicResource Brush.Panel}" />
            <Setter Property="BorderBrush" Value="{DynamicResource Brush.Border}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabControl">
                        <Grid KeyboardNavigation.TabNavigation="Local">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Background="{DynamicResource Brush.Header}"
                                    BorderBrush="{DynamicResource Brush.Border}"
                                    BorderThickness="0,0,0,1">
                                <TabPanel x:Name="HeaderPanel" Background="Transparent" IsItemsHost="True"/>
                            </Border>
                            <Border Grid.Row="1"
                                    Background="{DynamicResource Brush.Panel}"
                                    BorderBrush="{DynamicResource Brush.Border}"
                                    BorderThickness="1,0,1,1">
                                <ContentPresenter x:Name="PART_SelectedContentHost" Margin="0" ContentSource="SelectedContent"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="TabItem">
                        <Setter Property="Foreground" Value="{DynamicResource Brush.FG}"/>
                        <Setter Property="Padding" Value="12,6"/>
                        <Setter Property="Margin" Value="0,0,6,0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border x:Name="Bd"
                                            Background="{DynamicResource Brush.Header}"
                                            BorderBrush="{DynamicResource Brush.Border}"
                                            BorderThickness="1,1,1,0"
                                            CornerRadius="8,8,0,0"
                                            SnapsToDevicePixels="True">
                                        <ContentPresenter ContentSource="Header"
                                                          Margin="{TemplateBinding Padding}"
                                                          HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Bd" Property="Background" Value="{DynamicResource Brush.Button.Hover}"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Bd" Property="Background" Value="{DynamicResource Brush.Panel}"/>
                                            <Setter Property="Panel.ZIndex" Value="1"/>
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter Property="Opacity" Value="0.6"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataGrid -->
        <Style TargetType="DataGrid">
            <Setter Property="Foreground" Value="{DynamicResource Brush.FG}" />
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="RowBackground" Value="{DynamicResource Brush.Panel}"/>
            <Setter Property="AlternatingRowBackground" Value="{DynamicResource Brush.RowAlt}"/>
            <Setter Property="Background" Value="{DynamicResource Brush.Panel}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Brush.Border}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="AutoGenerateColumns" Value="True"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
        </Style>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{DynamicResource Brush.Header}"/>
            <Setter Property="Foreground" Value="{DynamicResource Brush.FG}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Brush.Border}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Padding" Value="6,4"/>
        </Style>
        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="{DynamicResource Brush.Panel}" />
            <Setter Property="BorderBrush" Value="{DynamicResource Brush.Border}" />
            <Setter Property="BorderThickness" Value="0,0,0,1" />
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{DynamicResource Brush.RowSel}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="DataGridCell">
            <Setter Property="BorderBrush" Value="{DynamicResource Brush.Border}" />
            <Setter Property="BorderThickness" Value="0,0,0,1" />
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{DynamicResource Brush.RowSel}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Headers -->
        <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource Brush.FG}"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>
        <!-- Label alignment for forms -->
        <Style x:Key="FormLabel" TargetType="Label" BasedOn="{StaticResource {x:Type Label}}">
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>

        <!-- ===== DARK MENU DROPDOWNS (explicit, no SystemColors overrides) ===== -->
        <Style TargetType="{x:Type ContextMenu}">
            <Setter Property="Background" Value="{DynamicResource Brush.Panel}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Brush.Border}"/>
            <Setter Property="Foreground" Value="{DynamicResource Brush.FG}"/>
        </Style>

        <Style TargetType="{x:Type MenuItem}">
            <Setter Property="Foreground" Value="{DynamicResource Brush.FG}"/>
            <Setter Property="Background" Value="{DynamicResource Brush.Panel}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource Brush.Border}"/>
            <Setter Property="Padding" Value="10,6"/>
            <Style.Triggers>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter Property="Background" Value="{DynamicResource Brush.Button.Hover}"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Foreground" Value="{DynamicResource Brush.FG.Muted}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="{x:Type Separator}">
            <Setter Property="Margin" Value="4,4,4,4"/>
            <Setter Property="Background" Value="{DynamicResource Brush.Border}"/>
        </Style>
    </Window.Resources>

    <!-- ========== MAIN LAYOUT ========== -->
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Menu -->
            <RowDefinition Height="Auto"/>
            <!-- Credentials -->
            <RowDefinition Height="*"/>
            <!-- Tabs -->
            <RowDefinition Height="Auto"/>
            <!-- Log -->
        </Grid.RowDefinitions>

        <!-- ===== Menu Bar ===== -->
        <Menu Grid.Row="0"
              Background="{DynamicResource Brush.Header}"
              Foreground="{DynamicResource Brush.FG}"
              BorderBrush="{DynamicResource Brush.Border}"
              BorderThickness="0,0,0,1">
            <MenuItem Header="_File">
                <MenuItem Header="E_xit" Click="Menu_Exit_Click"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About..." Click="Menu_About_Click"/>
            </MenuItem>
        </Menu>

        <!-- ===== Top: Credentials ===== -->
        <GroupBox Header="Credentials" Grid.Row="1" Margin="0,8,0,0">
            <Grid Margin="8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="170"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="170"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Row 0 -->
                <Label Grid.Row="0" Grid.Column="0" Style="{StaticResource FormLabel}" Content="Product ID:"/>
                <TextBox x:Name="ProductIdBox" Grid.Row="0" Grid.Column="1" Style="{StaticResource FormTextBox}" />
                <Label Grid.Row="0" Grid.Column="2" Style="{StaticResource FormLabel}" Content="Sandbox ID:"/>
                <TextBox x:Name="SandboxIdBox" Grid.Row="0" Grid.Column="3" Style="{StaticResource FormTextBox}" />

                <!-- Row 1 -->
                <Label Grid.Row="1" Grid.Column="0" Style="{StaticResource FormLabel}" Content="Deployment ID:"/>
                <TextBox x:Name="DeploymentIdBox" Grid.Row="1" Grid.Column="1" Style="{StaticResource FormTextBox}" />
                <Label Grid.Row="1" Grid.Column="2" Style="{StaticResource FormLabel}" Content="Client ID:"/>
                <TextBox x:Name="ClientIdBox" Grid.Row="1" Grid.Column="3" Style="{StaticResource FormTextBox}" />

                <!-- Row 2 -->
                <Label Grid.Row="2" Grid.Column="0" Style="{StaticResource FormLabel}" Content="Client Secret:"/>
                <PasswordBox x:Name="ClientSecretBox" Grid.Row="2" Grid.Column="1" Style="{StaticResource FormPasswordBox}" />
                <CheckBox x:Name="RememberCredsChk" Grid.Row="2" Grid.Column="3" Content="Remember credentials on this device" />

                <!-- Row 3 -->
                <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="SaveCredsBtn" Content="Save Credentials" Click="SaveCredsBtn_Click"/>
                    <Button x:Name="ClearCredentialsBtn" Content="Clear Credentials" Click="ClearCredentialsBtn_Click"/>
                </StackPanel>

                <StackPanel Grid.Row="3" Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="InitBtn" Content="Init EOS" Click="InitBtn_Click"/>
                    <!-- Start disabled; enable after successful Init -->
                    <Button x:Name="GetServerTokenBtn" Content="Get Access Token" IsEnabled="False" Click="GetServerTokenBtn_Click"/>
                    <Button x:Name="CopyBearerTokenBtn" Content="Copy Bearer Token" IsEnabled="False" Click="CopyBearerTokenBtn_Click"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- ===== Middle: Tabs ===== -->
        <TabControl Grid.Row="2">
            <!-- Partner View -->
            <TabItem Header="Partner View">
                <Border Background="{DynamicResource Brush.Panel}" Padding="12">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Row 0 -->
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="170"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Label Grid.Column="0" Style="{StaticResource FormLabel}" Content="Identity ID:"/>
                            <TextBox x:Name="WebIdentityIdBox" Grid.Column="1" Style="{StaticResource FormTextBox}" />

                            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button x:Name="WebGetEntitlementsBtn" Content="Fetch Entitlements" Click="WebGetEntitlementsBtn_Click"/>
                                <Button x:Name="CopyWebJsonBtn" Content="Copy JSON" Click="CopyWebJsonBtn_Click"/>
                            </StackPanel>
                        </Grid>

                        <!-- Row 1 -->
                        <DataGrid x:Name="WebEntitlementsGrid" Grid.Row="1" />
                    </Grid>
                </Border>
            </TabItem>

            <!-- Summary -->
            <TabItem Header="Summary">
                <Border Background="{DynamicResource Brush.Panel}" Padding="12">
                    <Grid Grid.IsSharedSizeScope="True">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- identity + actions -->
                            <RowDefinition Height="Auto"/>
                            <!-- date range -->
                            <RowDefinition Height="Auto"/>
                            <!-- include + offer map -->
                            <RowDefinition Height="Auto"/>
                            <!-- search -->
                            <RowDefinition Height="*"/>
                            <!-- grid -->
                        </Grid.RowDefinitions>

                        <!-- Row 0 -->
                        <Grid Grid.Row="0" Margin="0,0,0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="170" SharedSizeGroup="Label1"/>
                                <ColumnDefinition Width="*"   SharedSizeGroup="Input1"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Label Grid.Column="0" Style="{StaticResource FormLabel}" Content="Identity ID:"/>
                            <TextBox x:Name="SumIdentityIdBox" Grid.Column="1" Style="{StaticResource FormTextBox}" />
                            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button x:Name="SummaryFetchBtn" Content="Fetch Summary" Click="SummaryFetchBtn_Click"/>
                                <Button x:Name="CopySummaryJsonBtn" Content="Copy Summary JSON" Click="CopySummaryJsonBtn_Click"/>
                            </StackPanel>
                        </Grid>

                        <!-- Row 1 -->
                        <Grid Grid.Row="1" Margin="0,0,0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="170" SharedSizeGroup="Label1"/>
                                <ColumnDefinition Width="*"   SharedSizeGroup="Input1"/>
                                <ColumnDefinition Width="170" SharedSizeGroup="Label2"/>
                                <ColumnDefinition Width="*"   SharedSizeGroup="Input2"/>
                            </Grid.ColumnDefinitions>

                            <Label Grid.Column="0" Style="{StaticResource FormLabel}" Content="From:"/>
                            <DatePicker x:Name="FromDatePicker" Grid.Column="1" Style="{StaticResource FormDatePicker}" />
                            <Label Grid.Column="2" Style="{StaticResource FormLabel}" Content="To:"/>
                            <DatePicker x:Name="ToDatePicker" Grid.Column="3" Style="{StaticResource FormDatePicker}" />
                        </Grid>

                        <!-- Row 2 -->
                        <Grid Grid.Row="2" Margin="0,0,0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="170" SharedSizeGroup="Label1"/>
                                <ColumnDefinition Width="*"   SharedSizeGroup="Input1"/>
                                <ColumnDefinition Width="170" SharedSizeGroup="Label2"/>
                                <ColumnDefinition Width="*"   SharedSizeGroup="Input2"/>
                            </Grid.ColumnDefinitions>

                            <Label Grid.Column="0" Style="{StaticResource FormLabel}" Content="Include:"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <CheckBox x:Name="ShowUnredeemedChk" Content="Unredeemed" Margin="0,0,8,0" IsChecked="True"/>
                                <CheckBox x:Name="ShowRedeemedChk" Content="Redeemed" IsChecked="True"/>
                            </StackPanel>

                            <Label Grid.Column="2" Style="{StaticResource FormLabel}" Content="Offer names:"/>
                            <StackPanel Grid.Column="3" Orientation="Horizontal">
                                <!-- Default ON -->
                                <CheckBox x:Name="AutoResolveNamesChk" Content="Auto-resolve via API" Margin="0,0,8,0" IsChecked="True"/>
                                <Button x:Name="LoadOfferMapBtn" Content="Load CSV Map" Click="LoadOfferMapBtn_Click"/>
                            </StackPanel>
                        </Grid>

                        <!-- Row 3 -->
                        <Grid Grid.Row="3" Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="170" SharedSizeGroup="Label1"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Label Grid.Column="0" Style="{StaticResource FormLabel}" Content="Search:"/>
                            <TextBox x:Name="SearchBox" Grid.Column="1" Style="{StaticResource FormTextBox}" />
                        </Grid>

                        <!-- Row 4 -->
                        <DataGrid x:Name="SummaryGrid" Grid.Row="4" />
                    </Grid>
                </Border>
            </TabItem>

            <!-- Order Info -->
            <TabItem Header="Order Info">
                <Border Background="{DynamicResource Brush.Panel}" Padding="12">
                    <Grid Grid.IsSharedSizeScope="True">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Row 0: Inputs + actions -->
                        <Grid Grid.Row="0" Margin="0,0,0,8">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Local styles to keep ComboBox dark-themed (since app has no global ComboBox style) -->
                            <Grid.Resources>

                                <!-- Dark themed ComboBox (WPF-correct: no ContentPresenter.Foreground) -->
                                <Style TargetType="{x:Type ComboBox}">
                                    <Setter Property="Background" Value="{DynamicResource Brush.Input}"/>
                                    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Border}"/>
                                    <Setter Property="Foreground" Value="{DynamicResource Brush.FG}"/>
                                    <Setter Property="Padding" Value="6,4"/>
                                    <Setter Property="SnapsToDevicePixels" Value="True"/>
                                    <Setter Property="OverridesDefaultStyle" Value="True"/>

                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type ComboBox}">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="22"/>
                                                    </Grid.ColumnDefinitions>

                                                    <!-- Main border -->
                                                    <Border Grid.ColumnSpan="2"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="2"/>

                                                    <!-- Selected text: TextBlock *can* be styled -->
                                                    <TextBlock Grid.Column="0"
                               Margin="8,2,6,2"
                               VerticalAlignment="Center"
                               Text="{TemplateBinding Text}"
                               Foreground="{TemplateBinding Foreground}"
                               TextTrimming="CharacterEllipsis"/>

                                                    <!-- Drop arrow button -->
                                                    <ToggleButton Grid.Column="1"
                                  Focusable="False"
                                  IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                  Background="Transparent"
                                  BorderThickness="0">
                                                        <Path Data="M 0 0 L 4 4 L 8 0 Z"
                              Stretch="Uniform"
                              Width="10"
                              Height="6"
                              VerticalAlignment="Center"
                              HorizontalAlignment="Center"
                              Fill="{DynamicResource Brush.FG}"/>
                                                    </ToggleButton>

                                                    <!-- Popup dropdown -->
                                                    <Popup x:Name="Popup"
                           Placement="Bottom"
                           IsOpen="{TemplateBinding IsDropDownOpen}"
                           AllowsTransparency="True"
                           Focusable="False"
                           PopupAnimation="Slide">
                                                        <Border Background="{DynamicResource Brush.Panel}"
                                BorderBrush="{DynamicResource Brush.Border}"
                                BorderThickness="1">
                                                            <ScrollViewer>
                                                                <ItemsPresenter/>
                                                            </ScrollViewer>
                                                        </Border>
                                                    </Popup>
                                                </Grid>

                                                <ControlTemplate.Triggers>
                                                    <!-- Ensure Text is populated from selected item -->
                                                    <Trigger Property="IsEditable" Value="False">
                                                        <Setter Property="Text" Value="{Binding SelectedItem.Content, RelativeSource={RelativeSource TemplatedParent}}"/>
                                                    </Trigger>

                                                    <Trigger Property="IsEnabled" Value="False">
                                                        <Setter Property="Opacity" Value="0.55"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>


                                <!-- Dark themed ComboBox items -->
                                <Style TargetType="{x:Type ComboBoxItem}">
                                    <Setter Property="Background" Value="{DynamicResource Brush.Panel}"/>
                                    <Setter Property="Foreground" Value="{DynamicResource Brush.FG}"/>
                                    <Setter Property="Padding" Value="6,4"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsHighlighted" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource Brush.Selection}"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource Brush.Selection}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>


                            </Grid.Resources>


                            <!-- Row 0: Environment -->
                            <Grid Grid.Row="0" Margin="0,0,0,6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="170" SharedSizeGroup="Label1"/>
                                    <ColumnDefinition Width="220" SharedSizeGroup="Input1"/>
                                    <ColumnDefinition Width="170" SharedSizeGroup="Label2"/>
                                    <ColumnDefinition Width="*"   SharedSizeGroup="Input2"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Label Grid.Column="0" Style="{StaticResource FormLabel}" Content="Environment:"/>
                                <ComboBox x:Name="OrderEnvCombo"
                  Grid.Column="1"
                  SelectionChanged="OrderEnvCombo_SelectionChanged">
                                    <ComboBoxItem Content="GameDEV"/>
                                    <ComboBoxItem Content="Prod"/>
                                    <ComboBoxItem Content="Custom"/>
                                </ComboBox>

                                <Label Grid.Column="2" Style="{StaticResource FormLabel}" Content="Custom Base URL:"/>
                                <TextBox x:Name="OrderCustomBaseUrlBox"
                 Grid.Column="3"
                 Style="{StaticResource FormTextBox}"
                 Visibility="Collapsed"
                 ToolTip="Example: https://ecommerceintegration-public-service-gamedev.ol.epicgames.net" />

                                <Button x:Name="OrderUseDefaultCustomBtn"
                Grid.Column="4"
                Content="Use GameDEV URL"
                Click="OrderUseDefaultCustomBtn_Click"
                Visibility="Collapsed"/>
                            </Grid>

                            <!-- Row 1: Identity + Order + actions -->
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="170" SharedSizeGroup="Label1"/>
                                    <ColumnDefinition Width="*"   SharedSizeGroup="Input1"/>
                                    <ColumnDefinition Width="170" SharedSizeGroup="Label2"/>
                                    <ColumnDefinition Width="*"   SharedSizeGroup="Input2"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Label Grid.Column="0" Style="{StaticResource FormLabel}" Content="Identity ID:"/>
                                <TextBox x:Name="OrderIdentityIdBox" Grid.Column="1" Style="{StaticResource FormTextBox}" />

                                <Label Grid.Column="2" Style="{StaticResource FormLabel}" Content="Order ID:"/>
                                <TextBox x:Name="OrderIdBox" Grid.Column="3" Style="{StaticResource FormTextBox}" />

                                <StackPanel Grid.Column="4" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button x:Name="OrderFetchBtn" Content="Fetch Order" Click="OrderFetchBtn_Click"/>
                                    <Button x:Name="CopyOrderJsonBtn" Content="Copy Order JSON" Click="CopyOrderJsonBtn_Click"/>
                                </StackPanel>
                            </Grid>
                        </Grid>


                        <!-- Row 1: Order header/details -->
                        <DataGrid x:Name="OrderHeaderGrid" Grid.Row="1" />

                        <!-- Row 2: Line offers -->
                        <DataGrid x:Name="OrderLineOffersGrid" Grid.Row="2" />
                    </Grid>
                </Border>
            </TabItem>

        </TabControl>

        <!-- ===== Bottom: Log ===== -->
        <Border Grid.Row="3" Background="{DynamicResource Brush.Panel}" BorderBrush="{DynamicResource Brush.Border}" BorderThickness="1" Margin="0,8,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="120"/>
                </Grid.RowDefinitions>

                <DockPanel Grid.Row="0" LastChildFill="False" Margin="10,8,10,4">
                    <TextBlock Text="Log" Style="{StaticResource HeaderText}" DockPanel.Dock="Left"/>
                    <Button Content="Clear Log" DockPanel.Dock="Right" Click="ClearLog_Click"/>
                </DockPanel>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <TextBox x:Name="LogText"
                             Background="{DynamicResource Brush.Panel}"
                             Foreground="{DynamicResource Brush.FG.Muted}"
                             BorderThickness="0"
                             IsReadOnly="True"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             FontFamily="Consolas"
                             Padding="10"/>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>